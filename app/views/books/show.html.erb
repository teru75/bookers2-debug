<div class="container">
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @find.user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book%>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@find.user) do %>
						<%= attachment_image_tag(@find.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @find.user.name %>
						<% end %>
					</td>
					<td><%= link_to @find.title, @find %></td>
					<td><%= @find.body %></td>

					<% if @find.user == current_user %>
					<td><%= link_to "Edit",edit_book_path(@find), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@find, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>

	</div>
</div>
</div>
